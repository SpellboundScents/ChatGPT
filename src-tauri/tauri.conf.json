{
  "build": {
    "beforeDevCommand": "npm run dev:fe",
    "beforeBuildCommand": "npm run build:fe",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ChatGPT",
    "version": "../package.json"
  },
  "tauri": {
    "windows": [
      {
        "label": "core",
        "url": "https://chatgpt.com",
        "resizable": true,
        "fullscreen": false
      }
    ],
    "allowlist": {
      "all": true,
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$HOME/.chatgpt/**"
        ]
      }
    },
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.chirv.chatgpt",
      "longDescription": "ChatGPT Desktop Application",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "ChatGPT",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
    { "domain": "chatgpt.com", "windows": ["core"] }
  ]
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/SpellboundScents/ChatGPT/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNCOTAyNDI5Q0U3QkUwNDMKUldSRDRIdk9LU1NRTzcvcTA3Vm90ZWppVTJiSTVvR0ZPc3FQb1RqOGlTcXpkYk4ya2pEYTEyeUIK"
    }
  }
}
