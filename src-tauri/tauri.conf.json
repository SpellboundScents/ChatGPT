{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ChatGPT",
  "version": "../package.json",
  "identifier": "com.chirv.chatgpt",

  "build": {
    "beforeDevCommand": "npm run dev:fe",
    "beforeBuildCommand": "npm run build:fe",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },

  "app": {
    "security": { "csp": null },
    "windows": [
      {
        "title": "ChatGPT",
        "label": "core",
        "url": "https://chatgpt.com",
        "resizable": true,
        "visible": false,
        "fullscreen": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },

  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "shortDescription": "ChatGPT",
    "longDescription": "ChatGPT Desktop Application",
    "createUpdaterArtifacts": true,
    "targets": ["deb", "rpm", "appimage", "nsis", "dmg"],
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": { "type": "downloadBootstrapper", "silent": true }
    },
    "linux": { "deb": { "depends": [] } },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  },

  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/SpellboundScents/ChatGPT/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNCOTAyNDI5Q0U3QkUwNDMKUldSRDRIdk9LU1NRTzcvcTA3Vm90ZWppVTJiSTVvR0ZPc3FQb1RqOGlTcXpkYk4ya2pEYTEyeUIK"
    }
  }
}